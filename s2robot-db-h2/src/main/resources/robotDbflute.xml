<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
    >

    <!-- The components of DBFlute Runtime. -->
    <bean id="introduction" class="org.codelibs.robot.db.allcommon.DBFluteInitializer">
        <constructor-arg index="0"><ref bean="robotDataSource"/></constructor-arg>
    </bean>
    <bean id="invokerAssistant" class="org.codelibs.robot.db.allcommon.ImplementedInvokerAssistant" autowire="byType">
        <property name="dataSource"><ref bean="robotDataSource"/></property>
        <property name="introduction"><ref bean="introduction"/></property>
    </bean>
    <bean id="commonColumnAutoSetupper" class="org.codelibs.robot.db.allcommon.ImplementedCommonColumnAutoSetupper" autowire="byType"/>
    <bean id="behaviorSelector" class="org.codelibs.robot.db.allcommon.ImplementedBehaviorSelector" autowire="byType"/>
    <bean id="behaviorCommandInvoker" class="org.codelibs.robot.dbflute.bhv.core.BehaviorCommandInvoker" autowire="byType">
        <property name="invokerAssistant"><ref bean="invokerAssistant"/></property>
    </bean>

    <!-- The components of Behavior. -->
	<bean id="accessResultBhv" class="org.codelibs.robot.db.exbhv.AccessResultBhv" autowire="byType">
        <property name="behaviorCommandInvoker"><ref bean="behaviorCommandInvoker"/></property>
        <property name="behaviorSelector"><ref bean="behaviorSelector"/></property>
        <property name="commonColumnAutoSetupper"><ref bean="commonColumnAutoSetupper"/></property>
    </bean>
	<bean id="accessResultDataBhv" class="org.codelibs.robot.db.exbhv.AccessResultDataBhv" autowire="byType">
        <property name="behaviorCommandInvoker"><ref bean="behaviorCommandInvoker"/></property>
        <property name="behaviorSelector"><ref bean="behaviorSelector"/></property>
        <property name="commonColumnAutoSetupper"><ref bean="commonColumnAutoSetupper"/></property>
    </bean>
	<bean id="urlFilterBhv" class="org.codelibs.robot.db.exbhv.UrlFilterBhv" autowire="byType">
        <property name="behaviorCommandInvoker"><ref bean="behaviorCommandInvoker"/></property>
        <property name="behaviorSelector"><ref bean="behaviorSelector"/></property>
        <property name="commonColumnAutoSetupper"><ref bean="commonColumnAutoSetupper"/></property>
    </bean>
	<bean id="urlQueueBhv" class="org.codelibs.robot.db.exbhv.UrlQueueBhv" autowire="byType">
        <property name="behaviorCommandInvoker"><ref bean="behaviorCommandInvoker"/></property>
        <property name="behaviorSelector"><ref bean="behaviorSelector"/></property>
        <property name="commonColumnAutoSetupper"><ref bean="commonColumnAutoSetupper"/></property>
    </bean>
</beans>
