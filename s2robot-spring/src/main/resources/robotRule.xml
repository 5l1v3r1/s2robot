<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="robotTransformer.xml"/>
	
	<bean id="sitemapsRule" class="org.codelibs.robot.rule.impl.SitemapsRule" >
		<property name="ruleId" value="sitemapsRule"/>
		<property name="responseProcessor">
			<bean class="org.codelibs.robot.processor.impl.SitemapsResponseProcessor">
			</bean>
		</property>
		<property name="regexMap">
			<map>
				<entry key="url" value="#{T(java.util.regex.Pattern).compile('.*sitemap.*')}"/>
			</map>
		</property>
	</bean>
	
	<bean id="fileRule" class="org.codelibs.robot.rule.impl.RegexRule" >
		<property name="ruleId" value="fileRule"/>
		<property name="defaultRule" value="true"/>
		<property name="responseProcessor">
			<bean class="org.codelibs.robot.processor.impl.DefaultResponseProcessor">
				<property name="transformer"><ref bean="fileTransformer" /></property>
				<property name="successfulHttpCodes" value="200"/>
				<property name="notModifiedHttpCodes" value="304"/>
			</bean>
		</property>
	</bean>
    
	<bean id="ruleManager" class="org.codelibs.robot.rule.impl.RuleManagerImpl" scope="prototype">
		<property name="ruleList">
			<list>
				<ref bean="sitemapsRule" />
				<ref bean="fileRule" />
			</list>
		</property>
	</bean>
</beans>
